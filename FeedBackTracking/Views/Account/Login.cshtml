@model FeedBackTracking.Models.LoginData

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<html>
<head>
    <style type="text/css">
        body {
            font-family: 'Open Sans', sans-serif;
            background: #376195;
            margin: 0 auto 0 auto;
            width: 100%;
            text-align: center;
            margin: 20px 0px 20px 0px;
        }



        h1 {
            font-size: 1.5em;
            color: #525252;
            padding-top: 37px;
        }

        .box {
            background: white;
            width: 650px;
            height: 300px;
            border-radius: 6px;
            padding: 0px 0px 70px 0px;
            margin-left: 338px;
            margin-top: 120px;
        }

        .email {
            background: #ecf0f1;
            border: #ccc 1px solid;
            border-bottom: #ccc 2px solid;
            padding: 8px;
            width: 250px;
            color: #AAAAAA;
            margin-top: 10px;
            font-size: 1em;
            border-radius: 4px;
        }

        .password {
            border-radius: 4px;
            background: #ecf0f1;
            border: #ccc 1px solid;
            padding: 8px;
            width: 250px;
            font-size: 1em;
        }

        .btn {
            background: #2ecc71;
            width: 125px;
            padding-top: 5px;
            padding-bottom: 5px;
            color: white;
            border-radius: 4px;
            border: #27ae60 1px solid;
            margin-top: 41px;
            margin-bottom: 20px;
            float: left;
            margin-left: 260px;
            font-weight: 800;
            font-size: 0.8em;
        }

            .btn:hover {
                background: #2CC06B;
            }


        .innerbox {
            padding-top: 40px;
        }

        label {
            font-size: medium;
            color: #525252;
        }

        .password {
            background: #ecf0f1;
            border: #ccc 1px solid;
            border-bottom: #ccc 2px solid;
            padding: 8px;
            width: 250px;
            color: #AAAAAA;
            font-size: 1em;
            border-radius: 4px;
            margin-top: 40px;
            margin-left: 18px;
        }
    </style>
</head>
<body>
    @using(Html.BeginForm("Login","Account",FormMethod.Post))
    {
        <div class="box">
            <h1>Login</h1>
            <div class="innerbox">
                @Html.LabelFor(model=>model.username)
                @Html.TextBoxFor(model => model.username, new { @class="email"})
                @Html.ValidationMessageFor(model=>model.username)<br/>
                @Html.LabelFor(model=>model.password)
                @Html.PasswordFor(model => model.password, new {@class="password" })
                @Html.ValidationMessageFor(model=>model.password)<br/>
               
                <input type="submit" value="Login" class="btn" />
                @ViewBag.msg
            </div>

        </div> <!-- End Box -->
        <p class="p">Forgot your password?</p> <u style="color:#f1c40f;">@Html.ActionLink("Click Here","Forgetpassword")</u>
}


</body>
</html>