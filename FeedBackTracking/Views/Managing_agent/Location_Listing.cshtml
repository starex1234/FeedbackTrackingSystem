@model IEnumerable<FeedBackTracking.Models.Add_Location_Category>


<style>
    table, td, th {
        border: 1px solid #cdcdd1;
        text-align: center;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 15px;
    }

    th {
        background-color: #376195;
        color: white;
    }

    .btn {
        -moz-box-shadow: inset 0px 1px 0px 0px #376195;
        -webkit-box-shadow: inset 0px 1px 0px 0px #376195;
        box-shadow: inset 0px 1px 0px 0px #376195;
        background-color: #376195;
        border: 1px solid #376195;
        display: inline-block;
        cursor: pointer;
        color: #FFFFFF;
        padding: 7px 38px;
        text-decoration: none;
        font: 12px Arial, Helvetica, sans-serif;
        margin-left: 14px;
        margin-top: 0px;
        margin-bottom: 10px;
    }

    .field-style {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        padding: 8px;
        outline: none;
        border: 1px solid #B0CFE0;
        -webkit-transition: all 0.30s ease-in-out;
        -moz-transition: all 0.30s ease-in-out;
        -ms-transition: all 0.30s ease-in-out;
        -o-transition: all 0.30s ease-in-out;
    }

        .field-style:focus {
            box-shadow: 0 0 5px #B0CFE0;
            border: 1px solid #B0CFE0;
        }

    .field-split {
        width: 210px;
        height: 30px;
    }

    .text {
        color: #376195;
    }
</style>

